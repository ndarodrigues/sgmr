<mvc:View
    height="100%"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"   
    displayBlock="true"
    xmlns="sap.m">
				<f:Form id="criarUsuarioForm"
				editable="true">
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="4"
						labelSpanM="12"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer title="">
						<f:formElements>
							<f:FormElement label="">
								<f:fields>							
									<TextArea value=""  growing="true" width="100%"/>				
								</f:fields>
							</f:FormElement>                                                                                    
						</f:formElements>
					</f:FormContainer>																	
				</f:formContainers>				
			</f:Form>     
</mvc:View>
