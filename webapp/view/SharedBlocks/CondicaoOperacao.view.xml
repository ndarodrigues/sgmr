<mvc:View
    height="100%"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"   
    displayBlock="true"
    xmlns="sap.m">

	<VBox class="sapUiSmallMargin">     
		<Table id="idOperacoesTable" 
				alternateRowColors="true"
				autoPopinMode="false" 
				contextualWidth="Auto"		
				growing="true" 
				growingThreshold="100" 
				paste="onPaste" 
				items="{condicaoOperacaoModel>}">
			<headerToolbar>
				<OverflowToolbar id="otbSubheader">
					<Title text="Condições de Operação" level="H2" />
					<ToolbarSpacer />
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column hAlign="Begin" minScreenWidth="Phone" demandPopin="true" width="50%">
					<Text text="Condição" />
				</Column>
				<Column hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" width="12.5%">
					<Text text="Baixo" />
				</Column>
				<Column hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" width="12.5%">
					<Text text="Moderado" />
				</Column>
				<Column hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" width="12.5%">
					<Text text="Alto" />
				</Column>																										
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<ObjectIdentifier title="{condicaoOperacaoModel>condicao}"/>
						<Button type="Success" press="onPressConfirmado" icon="sap-icon://down" ></Button>  
						<Button type="Attention" press="onPressPendente" icon="sap-icon://circle-task" ></Button>   	
						<Button type="Negative" press="onPressNaoConfirmado" icon="sap-icon://up"></Button>  																			
					</cells>
				</ColumnListItem>
			</items>
		</Table>   
		</VBox>
</mvc:View>
