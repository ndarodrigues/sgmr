<mvc:View controllerName="com.pontual.sgmr.controller.Login"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <Page id="pageLogin" 
          title="{i18n>title}" 
          titleAlignment="Center"
          showNavButton="false"          
          class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
            <headerContent>
                <ObjectStatus
                    id="networkStatus2"
                    active="false"
                    inverted="true"
                    icon="{path: 'conexaoModel>statusConexao',
                        formatter: 'com.pontual.sgmr.model.formatter.getIconeConexao'}"
                    state="{path: 'conexaoModel>statusConexao',
                            formatter: 'com.pontual.sgmr.model.formatter.getCorIconeConexao'}"
                />
            </headerContent>
            <content>
                <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                    <items>
                        <Image src="{loginModel>imgLogo}"/>
                        <Label text="{i18n>usuario}" required="true" labelFor="loginInput"></Label>					
                        <Input id="usuarioInput" 
                            placeholder="{i18n>usuario}"
                            showClearIcon="true"
                            required="true"
                            value="{loginModel>CodUsuario}"					   
                            submit="onLogin"						   					   
                            class="sapUiSmallMarginBottom"></Input>
                        <Label text="{i18n>senha}" required="true" labelFor="loginInput"></Label>					
                        <Input id="senhaInput" 
                                placeholder="{i18n>senha}"
                                showClearIcon="true"
                                type="Password"
                                required="true"
                                value="{loginModel>Senha}"					   
                                submit="onLogin"	
                                class="sapUiSmallMarginBottom"></Input>                       
                        <Button id="entrarButton" width="12rem" text="{i18n>entrar}" type="Emphasized" press="onLogin" icon="sap-icon://visits" class="sapUiSmallMarginBottom"	></Button>
                        <Button id="configurarButton" width="12rem" text="{i18n>conexao}" type="Emphasized" press="onConfigurar" icon="sap-icon://action-settings" class="sapUiSmallMarginBottom"	></Button>                
                        <ObjectStatus
                                class="sapUiSmallMarginBottom"
                                text="{i18n>versao}"
                                inverted="true"
                                active="false"
                                state="Indication03" />
                    </items>
                </VBox>
            </content>
            <footer>
			    <OverflowToolbar>
                    <Button id="messagePopoverBtn"
                        visible="{=!!${message>/}.length}"
                        icon="{ path: '/', formatter: '.buttonIconFormatter' }"
                        type="{ path: '/', formatter: '.buttonTypeFormatter' }"
                        text= "{path: '/', formatter: '.highestSeverityMessages' }"
                        press=".handleMessagePopoverPress"
                        ariaHasPopup="Dialog"/>                       
				    <ToolbarSpacer/>
			    </OverflowToolbar>
		    </footer>

    </Page>
</mvc:View>